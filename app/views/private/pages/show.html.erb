<h3 class="h3">
  <%= @page.title %>
  <div class="desc">
    <%= link_to public_project_page_url(@project, @page), title: t('.public_hint') do %>
      <%= fa_icon('desktop') %> <%= public_project_page_url(@project, @page) %>
    <% end %>
  </div>
</h3>

<div class="page-content">
  <%= @page.html.html_safe %>
</div>

<%= link_to t('views.pages.edit_page'), edit_private_project_page_path(@project, @page),
  class: 'button outline' %>

<% content_for :sidebar do %>
  <%= render partial: 'sidebar' %>
<% end %>

<% if @project.google_analytics_tracker_id.present? %>
  <% content_for :analytics do %>
    <%= render 'shared/google_analytics_tracker',
      tracker_id: @project.google_analytics_tracker_id %>
  <% end %>
<% end %>
