<span class="small text-muted">&nbsp;</span>

<div class="mt-5">
  <h4><%= @project.title %></h4>

  <div class="sidebar-pages" data-role="activerecord_sortable">
    <%= render @project.pages %>
  </div>

  <p class="mt-5 mb-1"><%= link_to fa_icon('plus', text: t('views.sidebar.new_page')), new_private_project_page_path(@project), id: 'new_page' %></p>
  <% if current_user_owns_project? %>
    <p><%= link_to fa_icon('pencil', text: t('views.sidebar.edit_project')),
      edit_private_project_path(@project) %></p>
  <% end %>
</div>

<script>
  $(document).on('turbolinks:load', function () {
    hotkeys.activate('private_project_page');
  });
</script>
