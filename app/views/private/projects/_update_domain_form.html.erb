<% if @project.domain_was.present? %>
  <%= simple_form_for(@project, url: update_domain_private_project_url(@project), method: :put, html: {class: 'form'}) do |f| %>
    <%= f.input :domain, input_html: { value: @project_with_domain_updater.humanized_domain }, hint: t('.domain_hint', url: @project_with_domain_updater.correct_cname), disabled: true %>
    <%= f.hidden_field :domain, value: "" %>

    <%= f.button :submit, class: 'button outline small', value: t('.unlink') %>
  <% end %>
<% else %>
  <%= simple_form_for(@project, url: update_domain_private_project_url(@project), method: :put, html: {class: 'form'}) do |f| %>
    <%= f.input :domain, input_html: { value: @project_with_domain_updater.humanized_domain }, hint: t('.domain_hint', url: @project_with_domain_updater.correct_cname) %>

    <%= f.button :submit, class: 'button outline small' %>
  <% end %>
<% end %>
