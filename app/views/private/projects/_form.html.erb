<%= simple_form_for([:private, project]) do |f| %>
  <%= f.input :title %>
  <%= f.input :slug, hint: '', input_html: { data: { locale: I18n.locale } } %>
  <%= f.input :google_analytics_tracker_id, hint: t('views.for_example', text: 'UA-124200793-1') %>

  <%= f.submit class: 'button outline small' %> <%= or_back_link %>
<% end %>

<script>
  $(document).on('turbolinks:load', function () {
    hotkeys.activate('form');
  });
</script>
