<%= simple_form_for([:private, project]) do |f| %>
  <%= f.input :title %>
  <%= f.input :slug, hint: '', input_html: { data: { locale: I18n.locale } } %>

  <%= f.input :google_analytics_tracker_id, hint: t('views.for_example', text: 'UA-124200793-1'), wrapper_html: {class: 'mt-4'} %>

  <%= f.input :private, wrapper_html: {class: 'mt-4'}, input_html: {id: 'project-private-checkbox'} %>
  <%= f.input :secret_enabled, disabled: !project.private, input_html: {id: 'project-secret-enabled-checkbox'} %>

  <%= f.button :submit, class: 'btn-light' %> <%= or_back_link %>
<% end %>

<script>
  $(document).on('turbolinks:load', function () {
    hotkeys.activate('form');
  });
</script>
