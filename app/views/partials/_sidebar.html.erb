<% if @project %>
  <ul class="unstyled <%= 'sidebar-pages' if current_user_owns?(@project)%>"
  <% if current_user_owns?(@project) %>
    data-role="activerecord_sortable"
  <% end %>
  >
    <%= render partial: 'pages/page', collection: @project.pages %>
  </ul>

  <% if current_user_owns?(@project) %>
    <p><%= link_to fa_icon('plus', text: t('views.sidebar.new_page')), new_page_path %></p>
    <p><%= link_to fa_icon('pencil', text: t('views.sidebar.edit_project')),
      edit_project_path(@project), class: 'small' %></p>
  <% end %>
<% end %>

<% if user_signed_in? %>
  <p>
  <%= current_user.email %>
  (<%= link_to t('views.sidebar.sign_out'), destroy_user_session_path, method: :delete %>)
  </p>
<% else %>
  <p>
  <%= link_to fa_icon('unlock-alt'), new_user_session_path,
    class: 'muted smaller', title: t('views.sidebar.sign_in') %>
  </p>
<% end %>
