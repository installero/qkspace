<% content_for :title do %>
  <%= @project.title %>
<% end %>

<h1 class="h3">
  <%= @page.title %>
</h1>

<div class="page-content">
  <%= @page.html.html_safe %>
</div>

<% if current_user_owns?(@project) %>
  <%= link_to t('views.pages.edit_page'), edit_page_path(@page),
    class: 'button outline' %>
<% end %>

<% content_for :sidebar do %>
  <%= render partial: 'partials/sidebar' %>
<% end %>
