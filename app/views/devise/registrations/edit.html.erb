<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.input :email %>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <p>
      <%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %>
    </p>
  <% end %>
  <%= f.input :password, hint: t('.leave_blank_if_you_don_t_want_to_change_it') %>
  <%= f.input :password_confirmation %>
  <%= f.input :current_password, hint: t('.we_need_your_current_password_to_confirm_your_changes') %>

  <%= f.submit t('.update'), class: 'button' %> <%= or_back_link %>
<% end %>

<p><%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: 'error' %></p>
